{
  "name": "hugo-starter",
  "version": "1.0.0",
  "description": "Starter files for a Hugo project",
  "main": "index.js",
  "repository": "https://github.com/theNewDynamic/hugo-starter.git",
  "author": "budparr <budparr@gmail.com>",
  "license": "MIT",
  "scripts": {
    "version:major": "npm version major -m 'Breaking Release'",
    "version:minor": "npm version minor -m 'Feature Release'",
    "version:patch": "npm version patch -m 'bump version for fixes minor changes'",
    "browsersync-public": "browser-sync start --server 'public' --files 'public' reload",
    "browsersync": "browser-sync start --port 1313 --files 'content, src, themes' reload",
    "build-prod": "webpack --config webpack.prod.js --env=production",
    "build-dev": "webpack --config webpack.dev.js --env=development --progress --colors --watch",    
    "hugo": "hugo server --disableFastRender",
    "hugoBuild": "hugo -w",
    "start": "concurrently \"npm run hugo\" \"npm run build-dev\" "
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.18",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.9",
    "cssnano": "^3.10.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "glob-all": "^3.1.0",
    "instantsearch.js": "^2.5.1",
    "lazysizes": "^4.0.1",
    "npm-run-all": "^4.1.2",
    "postcss": "^6.0.17",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.1.0",
    "prettier": "1.11.0",
    "purgecss-webpack-plugin": "^0.20.0",
    "style-loader": "^0.20.1",
    "tailwindcss": "^0.4.1",
    "turbolinks": "^5.1.1",
    "typeface-vesper-libre": "^0.0.54",
    "webpack": "3.10.0",
    "webpack-cli": "^2.0.9",
    "webpack-merge": "^4.1.2"
  }
}
